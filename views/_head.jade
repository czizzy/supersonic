include mixin/avatar
header 
	#header-content.clearfix 
		h1#logo 
			a(href="/") SuperSonic
		div#utilities 
			ul
				- if (typeof user !== 'undefined')
					li 
						mixin avatar(user, 32)
						a(href="/user/#{user.username}")#{user.nick}
					li 
						a(href="/settings") 设置
					li
						a(href="/logout") 登出
				- else 
					li
						a(href="/signup") 注册
nav
	#navigator
		ul
			- if (typeof user !== 'undefined')
				li(class=(typeof navLink !== 'undefined' && navLink == 'home')?'active':'')
					a(href="/")
						span 首页
				li(class=(typeof navLink !== 'undefined' && navLink == 'user')?'active':'')
					a(href="/user/#{user.username}")
						span 个人主页
